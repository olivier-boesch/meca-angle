#:import version main.__version__
BoxLayout:
    padding: '20dp'
    spacing: '20dp'
    orientation: 'vertical'
    Label:
        id: display
        text: 'Off'
        font_size: '250sp'
        font_name: 'font/E1234.ttf'
    Label:
        size_hint_y: 0.05
        text: 'Meca Angle v' + version + ' - Olivier Boesch Â© 2020'
    BoxLayout:
        orientation: 'horizontal'
        spacing: '20dp'
        size_hint_y: 0.1
        Button:
            id: zero_btn
            disabled: True
            text: 'Set Zero'
            on_release: app.set_zero()
        Button:
            id: reset_zero_btn
            disabled: True
            text: 'Reset Zero'
            on_release: app.reset_zero()
    ToggleButton:
        size_hint_y: 0.1
        text: 'Enable'
        on_state: app.enable_accel(self.state=='down')
